<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BottomButtonsView">
        <attr name="bottomPositiveButtonText" format="string" />
        <attr name="bottomPositiveBackgroundColor" format="color" />

        <attr name="bottomNegativeButtonText" format="string" />
        <attr name="bottomNegativeBackgroundColor" format="color" />

        <attr name="bottomProgressMode" format="boolean" />
    </declare-styleable>

    <attr name="bottomButtonsStyle" format="reference" />


    <declare-styleable name="TicTacToeView">
        <attr name="player1Color" format="color" />
        <attr name="player2Color" format="color" />
        <attr name="gridColor" format="color" />
        <attr name="pointColor" format="color" />
        <attr name="pointRadius" format="float" />
    </declare-styleable>

    <declare-styleable name="CropBoxView">
        <attr name="gridColorCropBox" format="color" />
        <attr name="pointColorCropBox" format="color" />
        <attr name="pointRadiusCropBox" format="float" />
    </declare-styleable>

    <attr name="ticTacToeFieldStyle" format="reference" />

</resources>